{
  "name": "lilicas",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Lilicas-Bot/Lilicas",
  "author": "Lilicas Team",
  "license": "MPL-2.0",
  "scripts": {
    "db:gen": "yarn workspace @lilicas/db build",
    "db:deploy": "yarn workspace @lilicas/db knex migrate:latest --env main",
    "compose:dev": "docker compose --profile dev up -d",
    "compose:prod": "docker compose --profile production up -d --build",
    "lint": "eslint ./apps ./packages",
    "lint:fix": "eslint --fix ./apps ./packages"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.1"
  },
  "dependencies": {}
}
